{
  "name": "makerspace",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "fix": "ts-jest config:migrate jest.config.js",
    "start": "npm run start:server & npm run start:client",
    "start:server": "node 'server/dist/server.js'",
    "start:client": "cd client/ && npm run start:dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server/ && tsc --build --clean && tsc -p .",
    "build:client": "cd client/ && npm install && npm run build",
    "test": "npm run build && jest",
    "test:coverage": "npm run build && jest --coverage",
    "test:server:watch": "cross-env NODE_ENV=development npm run build:server && cd server/ && jest --silent false --verbose --detectOpenHandles",
    "start:dev": "cross-env NODE_ENV=development npm run build:dev",
    "start:staging": "cross-env NODE_ENV=staging npm run build:dev",
    "start:debug": "cross-env NODE_ENV=development npm run build:server && nodemon --exec node --inspect=0.0.0.0:9229 server/dist/server.js",
    "build:dev": "nodemon server/src/server.ts --exec ts-node server/src/server.ts -e ts,graphql",
    "knex:migrate:make": "knex --migrations-directory server/src/db/migrations migrate:make -x ts",
    "knex:migrate:latest": "knex --knexfile server/dist/db/knexFile.js migrate:latest",
    "knex:migrate:rollback": "knex --knexfile server/dist/db/knexFile.js migrate:rollback",
    "knex:migrate:unlock": "knex --knexfile server/dist/db/knexFile.js migrate:unlock",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.3.3",
    "@apollo/server-plugin-landing-page-graphql-playground": "^4.0.0",
    "@google-cloud/local-auth": "^2.1.1",
    "@graphql-tools/schema": "^8.2.0",
    "@node-saml/passport-saml": "~4.0.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "googleapis": "^111.0.0",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.13.6",
    "graphql-tag": "^2.12.6",
    "graphql-tools": "^8.2.0",
    "helmet": "^4.6.0",
    "http": "^0.0.1-security",
    "knex": "^0.95.11",
    "morgan": "^1.10.0",
    "ncp": "^2.0.0",
    "passport": "~0.6.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.1",
    "typescript": "^4.4.3",
    "uuid": "^8.3.2"
  },
  "description": "",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.23",
    "@types/passport": "^1.0.11",
    "@types/passport-local": "^1.0.35",
    "@types/passport-saml": "^1.1.3",
    "@types/react": "^18.0.31",
    "@types/react-beautiful-dnd": "^13.1.4",
    "@types/react-dom": "^18.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.26",
    "@types/uuid": "^8.3.4",
    "cross-env": "^7.0.3",
    "jest": "^27.2.1",
    "nodemon": "^2.0.12",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.7.0"
  }
}
